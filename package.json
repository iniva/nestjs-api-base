{
  "name": "nestjs-api-base",
  "version": "1.3.1",
  "description": "API based on NestJS",
  "repository": "git@github.com:iniva/nestjs-api-base.git",
  "author": "Tony DBR <tonyblast@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "npm run migrate:generate-client && nest start",
    "start:dev": "npm run migrate:generate-client && nest start --watch",
    "start:debug": "npm run migrate:generate-client && nest start --debug --watch",
    "start:prod": "npm run prisma:migrate:deploy && node dist/src/main",
    "test:typecheck": "tsc --noEmit",
    "test:lint": "eslint \"{src,test,migrations}/**/*.ts\"",
    "test:lint:fix": "eslint \"{src,test,migrations}/**/*.ts\" --fix",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config=jest.int-config.ts --runInBand",
    "test:integration:debug": "jest --config=jest.int-config.ts --detectOpenHandles",
    "healthcheck": "curl -f http://localhost:3000/health | grep ok || echo 'error'",
    "prisma:migrate:create": "dotenv -e .env.prisma -- npx prisma migrate dev --name $npm_config_name",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:generate-client": "npx prisma generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "^5.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^8.0.0",
    "nestjs-pino": "^4.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-http": "^10.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@faker-js/faker": "^9.0.3",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.14.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.7",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "."
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testMatch": [
      "**/src/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@Test/(.*)$": "<rootDir>/test/integration/$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
